---
import { getCollection } from "astro:content";
import SiteLayout from "../../layouts/SiteLayout.astro";
import TopTopicsNav from "../../components/TopTopicsNav.astro";
import { GROUPS, groupForCategory, prettyCategory } from "../../lib/taxonomy";

export async function getStaticPaths() {
  return GROUPS.map((g) => ({
    params: { group: g.key },
    props: { groupKey: g.key },
  }));
}

const posts = await getCollection("posts");
posts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

function formatDate(d) {
  try {
    return new Date(d).toLocaleDateString("en-GB", {
      day: "2-digit",
      month: "long",
      year: "numeric",
    });
  } catch {
    return "";
  }
}

const { groupKey } = Astro.props;
const group = GROUPS.find((g) => g.key === groupKey);

const filtered = group
  ? posts.filter((p) => group.categories.includes(p.data.category))
  : posts;

// counts for nav
const countsByGroup = GROUPS.reduce((acc, g) => {
  acc[g.key] = posts.filter((p) => g.categories.includes(p.data.category)).length;
  return acc;
}, /** @type {Record<string, number>} */ ({}));

const navItems = [
  { key: "all", label: "All", count: posts.length, href: "/posts" },
  ...GROUPS.map((g) => ({
    key: g.key,
    label: g.label,
    count: countsByGroup[g.key] ?? 0,
    href: `/posts/${g.key}`,
  })),
];

const activeLabel = group?.label ?? "All";
---

<SiteLayout
  title={`${activeLabel} Buying Guides · W&D`}
  description={`Browse W&D buying guides in ${activeLabel}.`}
>
  <div class="max-w-6xl mx-auto px-6 pt-8 pb-16">
    <header class="max-w-3xl">
      <h1 class="text-4xl sm:text-5xl font-semibold text-gray-900 leading-[1.12] tracking-[-0.015em]">
        All buying guides
      </h1>
      <p class="mt-4 text-base sm:text-lg text-gray-700 leading-relaxed">
        Showing <span class="font-semibold text-gray-900">{filtered.length}</span> guides in{" "}
        <span class="font-semibold text-gray-900">{activeLabel}</span>.
      </p>
    </header>

    <TopTopicsNav items={navItems} active={groupKey} />

    <div class="mt-8 rounded-2xl border border-gray-200 bg-white divide-y divide-gray-200">
      {filtered.map((post) => {
        const g = groupForCategory(post.data.category);

        return (
          <a
            href={`/posts/${post.slug}`}
            class="block p-5 sm:p-6 hover:bg-gray-50 transition"
          >
            <div class="flex items-start justify-between gap-6">
              <div class="min-w-0">
                <div class="text-xs text-gray-500">
                  {formatDate(post.data.publishedAt)}
                  {post.data.category ? <span> · {prettyCategory(post.data.category)}</span> : null}
                </div>

                <div class="mt-2 text-lg sm:text-xl font-semibold text-gray-900 leading-snug">
                  {post.data.title}
                </div>

                {post.data.description && (
                  <div class="mt-2 text-sm text-gray-700 leading-relaxed max-w-3xl">
                    {post.data.description}
                  </div>
                )}
              </div>

              <div class="shrink-0">
                <span class="inline-flex items-center rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-xs font-semibold text-gray-800">
                  {g.label}
                </span>
              </div>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</SiteLayout>
