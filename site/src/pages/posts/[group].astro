---
import { getCollection } from "astro:content";
import SiteLayout from "../../layouts/SiteLayout.astro";
import TopTopicsNav from "../../components/TopTopicsNav.astro";
import { getTaxonomy, groupForCategory, prettyCategory } from "../../lib/taxonomy";

export async function getStaticPaths() {
  // Load taxonomy inside getStaticPaths to avoid dev caching weirdness
  const taxonomy = await getTaxonomy();
  return taxonomy.groups.map((g) => ({
    params: { group: g.key },
    props: { groupKey: g.key },
  }));
}

const taxonomy = await getTaxonomy();

const posts = await getCollection("posts");
posts.sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

function formatDate(d) {
  try {
    return new Date(d).toLocaleDateString("en-GB", {
      day: "2-digit",
      month: "long",
      year: "numeric",
    });
  } catch {
    return "";
  }
}

const { groupKey } = Astro.props;
const group = taxonomy.groups.find((g) => g.key === groupKey);

const filtered = group
  ? posts.filter((p) => group.categories.includes(p.data.category))
  : posts;

// counts per group for nav
const countsByGroup = taxonomy.groups.reduce((acc, g) => {
  acc[g.key] = posts.filter((p) => g.categories.includes(p.data.category)).length;
  return acc;
}, /** @type {Record<string, number>} */ ({}));

const navItems = [
  { key: "all", label: "All", count: posts.length, href: "/posts" },
  ...taxonomy.groups.map((g) => ({
    key: g.key,
    label: g.label,
    count: countsByGroup[g.key] ?? 0,
    href: `/posts/${g.key}`,
  })),
];

const activeLabel = group?.label ?? "Guides";
const seoTitle = `${activeLabel} Buying Guides | ${taxonomy.brand.name}`;
const seoDescription = group?.intro ?? `Browse ${taxonomy.brand.name} buying guides.`;
const canonicalPath = `/posts/${groupKey}`;

// JSON-LD ItemList (absolute URLs are best)
const base = (Astro.site ? new URL(Astro.site) : new URL(Astro.url)).origin;

const itemListJson = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  name: `${activeLabel} buying guides`,
  itemListOrder: "https://schema.org/ItemListOrderDescending",
  numberOfItems: filtered.length,
  itemListElement: filtered.map((p, i) => ({
    "@type": "ListItem",
    position: i + 1,
    url: new URL(`/posts/${p.slug}`, base).toString(),
    name: p.data.title,
  })),
};
---

<SiteLayout title={seoTitle} description={seoDescription} canonical={canonicalPath}>
  <Fragment slot="head">
    <script type="application/ld+json">
      {JSON.stringify(itemListJson)}
    </script>
  </Fragment>

  <div class="max-w-6xl mx-auto px-6 pt-8 pb-16">
    <header class="w-full">
      <h1 class="text-4xl sm:text-5xl font-semibold text-gray-900 leading-[1.12] tracking-[-0.015em]">
        {activeLabel} buying guides
      </h1>

      <p class="mt-4 text-base sm:text-lg text-gray-700 leading-relaxed max-w-none">
        {group?.intro ?? `Browse ${taxonomy.brand.name} buying guides by topic.`}
      </p>

      <p class="mt-3 text-sm text-gray-600">
        Showing <span class="font-semibold text-gray-900">{filtered.length}</span> guides.
      </p>
    </header>

    <TopTopicsNav items={navItems} active={groupKey} />

    <div class="mt-8 rounded-2xl border border-gray-200 bg-white divide-y divide-gray-200">
      {filtered.map((post) => {
        const g = groupForCategory(taxonomy, post.data.category);

        return (
          <a
            href={`/posts/${post.slug}`}
            class="block p-5 sm:p-6 hover:bg-gray-50 transition"
          >
            <div class="flex items-start justify-between gap-6">
              <div class="min-w-0">
                <div class="text-xs text-gray-500">
                  {formatDate(post.data.publishedAt)}
                  {post.data.category ? <span> Â· {prettyCategory(post.data.category)}</span> : null}
                </div>

                <div class="mt-2 text-lg sm:text-xl font-semibold text-gray-900 leading-snug">
                  {post.data.title}
                </div>

                {post.data.description && (
                  <div class="mt-2 text-sm text-gray-700 leading-relaxed max-w-none">
                    {post.data.description}
                  </div>
                )}
              </div>

              <div class="shrink-0">
                <span class="inline-flex items-center rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-xs font-semibold text-gray-800">
                  {g.label}
                </span>
              </div>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</SiteLayout>
