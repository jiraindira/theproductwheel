---
import "../styles/global.css";
import { getTaxonomy } from "../lib/taxonomy";
import BackToTop from "../components/BackToTop.astro";

const taxonomy = await getTaxonomy();

const {
  title = taxonomy.brand.name,
  description = taxonomy.brand.tagline,
  canonical, // optional relative or absolute
  ogImage, // optional absolute or relative URL to an image
  ogType = "website", // e.g. "website" | "article"
  twitterCard,
  noIndex = false,
} = Astro.props;

const siteName = taxonomy.brand.name;
const baseTitle = String(title || siteName).trim();
const pageTitle = baseTitle === siteName ? siteName : `${baseTitle} | ${siteName}`;
const pageDescription = String(description || "").trim();

const canonicalUrl = canonical
  ? new URL(canonical, Astro.site ?? "http://localhost").toString()
  : (Astro.url ? Astro.url.toString() : undefined);

const ogImageUrl =
  typeof ogImage === "string" && ogImage.length > 0
    ? new URL(ogImage, Astro.site ?? "http://localhost").toString()
    : undefined;

const AFFILIATE_DISCLOSURE =
  "As an Amazon Associate I earn from qualifying purchases. When you buy through our links, we may earn a commission.";

const GA_MEASUREMENT_ID = (import.meta.env.PUBLIC_GA_MEASUREMENT_ID ?? "").trim();
const GOOGLE_SITE_VERIFICATION = (import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION ?? "").trim();

// ✅ Brand icon (public asset)
const BRAND_ICON_SRC = "/brand/logo-icon.png";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />

    {GOOGLE_SITE_VERIFICATION ? (
      <meta name="google-site-verification" content={GOOGLE_SITE_VERIFICATION} />
    ) : null}

    {noIndex ? <meta name="robots" content="noindex, nofollow" /> : null}

    {canonicalUrl ? <link rel="canonical" href={canonicalUrl} /> : null}

    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:type" content={String(ogType || "website")} />
    {canonicalUrl ? <meta property="og:url" content={canonicalUrl} /> : null}
    {ogImageUrl ? <meta property="og:image" content={ogImageUrl} /> : null}

    <meta
      name="twitter:card"
      content={
        twitterCard
          ? String(twitterCard)
          : ogImageUrl
            ? "summary_large_image"
            : "summary"
      }
    />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    {ogImageUrl ? <meta name="twitter:image" content={ogImageUrl} /> : null}

    <slot name="head" />
  </head>

  <body>
    <a class="skip-link" href="#main">Skip to content</a>

    <header class="site-header">
      <div class="site-header-bar">
        <div class="site-container header-row">
          <a href="/" class="brand" aria-label={`${taxonomy.brand.name} home`}>
            <span class="brand-mark" aria-hidden="true">
              <img
                src={BRAND_ICON_SRC}
                alt=""
                class="brand-icon-img"
                loading="eager"
                decoding="async"
              />
            </span>

            <span class="brand-text">
              <span class="brand-name">{taxonomy.brand.name}</span>
              <span class="brand-tagline">{taxonomy.brand.tagline}</span>
            </span>
          </a>

          <nav class="site-nav" aria-label="Primary">
            <a href="/posts" class="nav-link">Guides</a>
          </nav>
        </div>
      </div>

      <div class="site-disclosure" role="note" aria-label="Affiliate disclosure">
        <div class="site-container disclosure-row">
          <span class="disclosure-text">{AFFILIATE_DISCLOSURE}</span>
        </div>
      </div>
    </header>

    <main id="main" class="site-main">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="site-container footer-row">
        <div class="footer-left">
          © {new Date().getFullYear()} {taxonomy.brand.name}
        </div>
        <div class="footer-right">
          <span>Independent product recommendations</span>
          <span class="footer-dot" aria-hidden="true">·</span>
          <a class="footer-link" href="/cookies">Cookies</a>
        </div>
      </div>
    </footer>

    <BackToTop />

    <div
      id="cookie-banner"
      class="cookie-banner"
      role="region"
      aria-label="Cookie consent"
      hidden
    >
      <div class="cookie-container">
        <div class="cookie-text">
          <div class="cookie-title">Cookies & analytics</div>
          <div class="cookie-body">
            We use analytics cookies (Google Analytics) to understand which guides are useful
            and which outbound links are clicked. You can accept or reject analytics cookies.
            <a class="cookie-link" href="/cookies">Learn more</a>
          </div>
        </div>

        <div class="cookie-actions">
          <button id="cookie-reject" class="cookie-btn cookie-btn-ghost" type="button">
            Reject
          </button>
          <button id="cookie-accept" class="cookie-btn cookie-btn-primary" type="button">
            Accept
          </button>
        </div>
      </div>
    </div>

    <script define:vars={{ GA_ID: GA_MEASUREMENT_ID }}>
      (() => {
        const CONSENT_COOKIE = "tpw_cookie_consent";
        const CONSENT_ACCEPTED = "accepted";
        const CONSENT_REJECTED = "rejected";
        const CONSENT_DAYS = 180;

        const banner = document.getElementById("cookie-banner");
        const acceptBtn = document.getElementById("cookie-accept");
        const rejectBtn = document.getElementById("cookie-reject");

        const readCookie = (name) => {
          const parts = document.cookie.split(";").map((p) => p.trim());
          for (const p of parts) {
            if (!p) continue;
            if (p.startsWith(name + "=")) return decodeURIComponent(p.slice(name.length + 1));
          }
          return "";
        };

        const writeCookie = (name, value, days) => {
          const maxAge = Math.max(0, Math.floor(days * 24 * 60 * 60));
          document.cookie =
            name +
            "=" +
            encodeURIComponent(value) +
            "; Max-Age=" +
            String(maxAge) +
            "; path=/; samesite=lax";
        };

        const hideBanner = () => {
          if (!banner) return;
          banner.hidden = true;
        };

        const showBanner = () => {
          if (!banner) return;
          banner.hidden = false;
        };

        const isAnalyticsEnabled = () => readCookie(CONSENT_COOKIE) === CONSENT_ACCEPTED;

        const loadGa4 = () => {
          if (!GA_ID) return;
          if (typeof window.gtag === "function") return;

          window.dataLayer = window.dataLayer || [];
          window.gtag = function gtag() {
            window.dataLayer.push(arguments);
          };

          const script = document.createElement("script");
          script.async = true;
          script.src = "https://www.googletagmanager.com/gtag/js?id=" + encodeURIComponent(GA_ID);
          document.head.appendChild(script);

          window.gtag("js", new Date());
          window.gtag("config", GA_ID);
        };

        const setupOutboundTracking = () => {
          if (!GA_ID) return;
          if (window.__tpw_outbound_tracking_installed) return;
          window.__tpw_outbound_tracking_installed = true;

          document.addEventListener(
            "click",
            (e) => {
              if (!isAnalyticsEnabled()) return;
              if (typeof window.gtag !== "function") return;
              if (!(e instanceof MouseEvent)) return;

              const target = e.target;
              if (!(target instanceof Element)) return;

              const a = target.closest("a");
              if (!(a instanceof HTMLAnchorElement)) return;

              const href = (a.getAttribute("href") || "").trim();
              if (!href) return;
              if (href.startsWith("#")) return;
              if (href.startsWith("mailto:") || href.startsWith("tel:")) return;

              let url;
              try {
                url = new URL(href, window.location.href);
              } catch {
                return;
              }

              // Only track outbound (different origin).
              if (url.origin === window.location.origin) return;

              const isAffiliate = (a.getAttribute("rel") || "").split(/\s+/).includes("sponsored");
              const linkText = (a.textContent || "").trim().slice(0, 100);

              const params = {
                link_url: url.href,
                link_domain: url.hostname,
                link_text: linkText,
                is_affiliate: isAffiliate ? 1 : 0,
                transport_type: "beacon",
              };

              const targetBlank = (a.getAttribute("target") || "") === "_blank";
              const newTabIntent = targetBlank || e.metaKey || e.ctrlKey || e.shiftKey || e.altKey || e.button !== 0;

              if (newTabIntent) {
                window.gtag("event", "outbound_click", params);
                return;
              }

              // Same-tab navigation: try to flush event before leaving.
              e.preventDefault();

              let navigated = false;
              const go = () => {
                if (navigated) return;
                navigated = true;
                window.location.assign(url.href);
              };

              window.gtag("event", "outbound_click", {
                ...params,
                event_callback: go,
              });

              window.setTimeout(go, 250);
            },
            true
          );
        };

        const enableAnalytics = () => {
          writeCookie(CONSENT_COOKIE, CONSENT_ACCEPTED, CONSENT_DAYS);
          hideBanner();
          loadGa4();
          setupOutboundTracking();
        };

        const rejectAnalytics = () => {
          writeCookie(CONSENT_COOKIE, CONSENT_REJECTED, CONSENT_DAYS);
          hideBanner();
        };

        // If there's no GA ID configured, don't show the banner at all.
        if (!GA_ID) {
          hideBanner();
          return;
        }

        // Initial state.
        const existing = readCookie(CONSENT_COOKIE);
        if (existing === CONSENT_ACCEPTED) {
          loadGa4();
          setupOutboundTracking();
          hideBanner();
          return;
        }

        if (existing === CONSENT_REJECTED) {
          hideBanner();
          return;
        }

        // No choice yet.
        showBanner();

        if (acceptBtn instanceof HTMLButtonElement) {
          acceptBtn.addEventListener("click", enableAnalytics);
        }

        if (rejectBtn instanceof HTMLButtonElement) {
          rejectBtn.addEventListener("click", rejectAnalytics);
        }
      })();
    </script>
  </body>
</html>

<style>
  .site-header {
    background: transparent;
  }

  .site-header-bar {
    position: sticky;
    top: 0;
    z-index: 20;
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(17, 24, 39, 0.08);
  }

  .site-container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* ✅ Slightly taller so brand stack breathes */
  .header-row {
    height: 78px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 18px;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 16px;
    text-decoration: none;
    color: inherit;
    min-width: 0;
  }

  /* ✅ Bigger mark + less “padded button” look */
  .brand-mark {
    height: 44px;
    width: 44px;
    border-radius: 14px;
    border: 1px solid rgba(17, 24, 39, 0.08);
    background: rgba(255, 255, 255, 0.6);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;
    overflow: hidden;
  }

  /*
    ✅ This is the key fix for “art looks smaller than container”:
    many PNG logos have transparent padding baked in.
    We scale the image inside the box so the hamster fills the mark.
  */
  .brand-icon-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* ✅ More vertical breathing room between name & tagline */
  .brand-text {
    display: grid;
    gap: 5px;
    line-height: 1.15;
    min-width: 0;
    padding: 2px 0; /* tiny cushion so it doesn’t feel cramped */
  }

  .brand-name {
    font-weight: 950;
    letter-spacing: -0.02em;
    font-size: 21px;
    color: rgba(17, 24, 39, 0.97);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .brand-tagline {
    font-size: 13.5px;
    color: rgba(55, 65, 81, 0.80);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .site-nav {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-link {
    font-size: 13px;
    font-weight: 850;
    color: rgba(17, 24, 39, 0.92);
    text-decoration: none;
    padding: 10px 14px;
    border-radius: 14px;
    border: 1px solid rgba(17, 24, 39, 0.10);
    background: rgba(255, 255, 255, 0.75);
  }

  .nav-link:hover {
    background: rgba(17, 24, 39, 0.04);
    border-color: rgba(17, 24, 39, 0.14);
  }

  .site-disclosure {
    border-top: 1px solid rgba(17, 24, 39, 0.10);
    border-bottom: 1px solid rgba(17, 24, 39, 0.10);
    background: #f9f9f9;
  }

  .disclosure-row {
    padding: 8px 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .disclosure-text {
    font-size: 11.75px;
    line-height: 1.35;
    color: rgba(17, 24, 39, 0.62);
    text-align: left;
    font-weight: 400;
  }

  .site-main {
    padding: 0;
    background:
      radial-gradient(1200px 600px at 20% -10%, rgba(37, 99, 235, 0.08), transparent 60%),
      radial-gradient(900px 500px at 90% 0%, rgba(17, 24, 39, 0.05), transparent 55%),
      #f7f7f8;
    min-height: 70vh;
  }

  .site-footer {
    margin-top: 56px;
    border-top: 1px solid rgba(17, 24, 39, 0.08);
    background: rgba(255, 255, 255, 0.92);
  }

  .footer-row {
    padding: 22px 24px;
    display: flex;
    flex-wrap: wrap;
    gap: 10px 18px;
    justify-content: space-between;
    color: rgba(55, 65, 81, 0.75);
    font-size: 13px;
  }

  .footer-right {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }

  .footer-dot {
    color: rgba(55, 65, 81, 0.55);
  }

  .footer-link {
    color: rgba(55, 65, 81, 0.85);
    text-decoration: underline;
    text-underline-offset: 3px;
    font-weight: 700;
  }

  .footer-link:hover {
    color: rgba(17, 24, 39, 0.92);
  }

  .cookie-banner {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 40;
    padding: 14px;
    background: rgba(17, 24, 39, 0.18);
    backdrop-filter: blur(6px);
  }

  .cookie-container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 14px 14px;
    border-radius: 18px;
    border: 1px solid rgba(17, 24, 39, 0.12);
    background: rgba(255, 255, 255, 0.96);
    display: grid;
    gap: 12px;
  }

  @media (min-width: 720px) {
    .cookie-container {
      grid-template-columns: 1fr auto;
      align-items: center;
      padding: 16px 18px;
    }
  }

  .cookie-title {
    font-size: 13px;
    font-weight: 900;
    letter-spacing: -0.01em;
    color: rgba(17, 24, 39, 0.92);
  }

  .cookie-body {
    margin-top: 6px;
    font-size: 13px;
    line-height: 1.45;
    color: rgba(55, 65, 81, 0.82);
  }

  .cookie-link {
    margin-left: 8px;
    font-weight: 800;
    color: rgba(29, 78, 216, 0.95);
    text-decoration: none;
    white-space: nowrap;
  }

  .cookie-link:hover {
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .cookie-actions {
    display: flex;
    gap: 10px;
    justify-content: flex-start;
  }

  @media (min-width: 720px) {
    .cookie-actions {
      justify-content: flex-end;
    }
  }

  .cookie-btn {
    appearance: none;
    border: 1px solid rgba(17, 24, 39, 0.12);
    border-radius: 14px;
    padding: 10px 14px;
    font-size: 13px;
    font-weight: 850;
    cursor: pointer;
  }

  .cookie-btn-ghost {
    background: rgba(17, 24, 39, 0.02);
    color: rgba(17, 24, 39, 0.86);
  }

  .cookie-btn-ghost:hover {
    background: rgba(17, 24, 39, 0.05);
  }

  .cookie-btn-primary {
    border-color: rgba(37, 99, 235, 0.22);
    background: rgba(37, 99, 235, 0.10);
    color: rgba(29, 78, 216, 0.98);
  }

  .cookie-btn-primary:hover {
    background: rgba(37, 99, 235, 0.14);
  }

  .skip-link {
    position: absolute;
    left: -999px;
    top: 10px;
    padding: 10px 12px;
    border-radius: 12px;
    background: #111827;
    color: white;
    text-decoration: none;
    z-index: 999;
  }

  .skip-link:focus {
    left: 10px;
  }

  @media (max-width: 520px) {
    .header-row {
      height: 70px;
    }

    .brand-mark {
      height: 50px;
      width: 50px;
      border-radius: 16px;
    }

    .brand-name {
      font-size: 18px;
    }

    .brand-tagline {
      font-size: 12px;
    }

    .brand-icon-img {
      transform: scale(1.18);
    }
  }
</style>
