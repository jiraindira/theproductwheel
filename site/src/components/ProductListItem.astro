---
const { product, index } = Astro.props;

function hostname(url) {
  try {
    return new URL(url).hostname.replace(/^www\./, "");
  } catch {
    return "";
  }
}

const site = hostname(product?.url);
const initials =
  (product?.title || "P")
    .trim()
    .split(/\s+/)
    .slice(0, 2)
    .map((w) => w[0]?.toUpperCase())
    .join("") || "P";
---

<article class="rounded-2xl border border-gray-200 bg-white p-5">
  <div class="flex gap-4">
    <!-- Image placeholder -->
    <div class="shrink-0 w-20 h-20 rounded-xl overflow-hidden border border-gray-200 bg-gray-50 flex items-center justify-center">
      <!-- If you later add product.image, swap this block for an <img> -->
      <div class="w-full h-full hero-gradient flex items-center justify-center">
        <span class="text-sm font-bold text-gray-700">{initials}</span>
      </div>
    </div>

    <div class="min-w-0 flex-1">
      <!-- Title row -->
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <div class="text-xs text-gray-500">
            Pick {index}{site ? <span> · {site}</span> : null}
          </div>

          <h3 class="mt-1 text-base font-semibold text-gray-900 leading-snug">
            {product.title}
          </h3>

          <div class="mt-2 text-xs text-gray-500">
            {typeof product.rating === "number" ? <span>{product.rating.toFixed(1)}★</span> : null}
            {typeof product.reviews_count === "number" ? (
              <span>{typeof product.rating === "number" ? " · " : ""}{product.reviews_count.toLocaleString()} reviews</span>
            ) : null}
            {product.price ? <span>{(typeof product.rating === "number" || typeof product.reviews_count === "number") ? " · " : ""}{product.price}</span> : null}
          </div>
        </div>

        <!-- Button -->
        <div class="shrink-0">
          <a
            href={product.url}
            rel="sponsored nofollow"
            class="inline-flex items-center justify-center rounded-xl bg-gray-900 px-4 py-2 text-sm font-semibold text-white hover:bg-black focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500/40"
          >
            Check price →
          </a>
        </div>
      </div>

      <!-- Description under it -->
      {product.description && (
        <p class="mt-3 text-sm text-gray-700 leading-relaxed">
          {product.description}
        </p>
      )}
    </div>
  </div>
</article>
