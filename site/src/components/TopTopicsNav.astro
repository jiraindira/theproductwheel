---
const { items = [], active = "all" } = Astro.props;
// items: [{ key, label, href, count }]
---

<nav aria-label="Browse topics">
  <ul class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm">
    {items.map((it) => {
      const isActive = active === it.key;
      const labelWithCount =
        typeof it.count === "number" ? `${it.label} (${it.count})` : String(it.label);

      return (
        <li>
          <a
            href={it.href}
            aria-current={isActive ? "page" : undefined}
            class:list={[
              "font-semibold transition-colors",
              "focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 focus-visible:ring-offset-2",
              isActive
                ? "text-blue-700"
                : "text-gray-700 hover:text-gray-950",
            ]}
          >
            {labelWithCount}
          </a>
        </li>
      );
    })}
  </ul>
</nav>
