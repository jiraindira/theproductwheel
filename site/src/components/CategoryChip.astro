---
const { label, href, count, categoryKey } = Astro.props as {
  label: string;
  href: string;
  count?: number;
  categoryKey?: string;
};

function bgClassFor(key: string) {
  switch (key) {
    case "home":
      return "from-emerald-600 via-emerald-500 to-teal-400";
    case "tech":
      return "from-blue-700 via-indigo-600 to-violet-500";
    case "pets":
      return "from-amber-600 via-orange-500 to-rose-500";
    case "kids":
      return "from-pink-600 via-fuchsia-500 to-purple-500";
    case "travel":
      return "from-sky-700 via-cyan-600 to-emerald-400";
    case "health":
      return "from-slate-800 via-slate-700 to-slate-500";
    case "family":
      return "from-stone-700 via-stone-600 to-amber-500";
    default:
      return "from-gray-800 via-gray-700 to-gray-500";
  }
}

function dotClassFor(key: string) {
  switch (key) {
    case "home":
      return "bg-emerald-500";
    case "tech":
      return "bg-indigo-500";
    case "pets":
      return "bg-orange-500";
    case "kids":
      return "bg-fuchsia-500";
    case "travel":
      return "bg-cyan-500";
    case "health":
      return "bg-slate-600";
    case "family":
      return "bg-amber-600";
    default:
      return "bg-gray-600";
  }
}

const k = String(categoryKey || "").trim().toLowerCase();
const dotClass = dotClassFor(k);
const aria = typeof count === "number" ? `${label} (${count})` : String(label || "").trim();
---

<a
  href={href}
  aria-label={aria}
  class:list={[
    "group relative flex min-w-0 items-center justify-between gap-3 rounded-2xl border border-gray-200 bg-white px-4 py-3 shadow-sm transition hover:border-gray-300 hover:bg-gray-50 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 focus-visible:ring-offset-2",
  ]}
>
  <span class="relative flex min-w-0 items-center gap-3">
    <span class:list={["h-2.5 w-2.5 shrink-0 rounded-full", dotClass]} aria-hidden="true"></span>
    <span class="block min-w-0 truncate text-sm font-semibold text-gray-900">{label}</span>
  </span>

  {typeof count === "number" ? (
    <span class="relative shrink-0 rounded-full bg-gray-900 px-2.5 py-1 text-xs font-semibold text-white">
      {count}
    </span>
  ) : null}
</a>
